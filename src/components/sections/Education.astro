---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "";
        const years = endDate != null ? `${startYear} - ${endYear}` : `${startYear}`;
        const timeStyle = endDate == null ? { textAlign: "center" } : {};

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{area}</h3>
                </div>
                <time style={timeStyle}>{years}</time>
              </header>

              <footer>
                <p>
                  <a href={url} title={`Ver ${institution}`} target="_blank">
                    {institution}
                  </a>
                </p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer p a {
    color: #555
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
